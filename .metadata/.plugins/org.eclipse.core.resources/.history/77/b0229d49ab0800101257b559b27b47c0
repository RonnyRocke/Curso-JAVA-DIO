package exercicios;

import java.util.Scanner;

import javax.lang.model.element.QualifiedNameable;

public class Main {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		Product p = new Product();
		int value;
		double totalValueStock;
		
		do {
			System.out.println("\n\n1: Iniciar \n2: Sair");
			System.out.println("\nDigite uma opção: ");
			value = sc.nextInt();

			if(value==1) {
			System.out.println("\n\nEnter Product Data: \nName: ");
			p.name = sc.next();
						
			System.out.println("\nPrice: ");
			p.price = sc.nextFloat();
			
			
			System.out.println("\nQuantity in stock: ");
			p.quantity = sc.nextInt();		
			p.totalValueStock();
					
			System.out.printf("\nProduct data: %s ,$ %.2f , %d units , Total: $ %.2f ",p.name, p.price,p.quantity ,p.totalValueStock());
			
			System.out.print("\n\nEnter the number of products to be added in stock");
			int att = p.quantity;
			att = sc.nextInt();
			
			p.addProducts(att);
			p.totalValueStock();
			
			
			System.out.printf("\nUpdate data: %s ,$ %.2f , %d units, Total: $ %.2f ",p.name, p.price, att,p.totalValueStock());

			}
			else if(value==2){
				System.out.println("\nObg Volte sempre!");
				break;
			}
			else {
				System.out.println("\nOpção Inválida!");
			}
			
		}while(value!=2);
		
		sc.close();
	}

}
